<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.example.cost.contrl.RevealCircleBackgroud
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/billwrite_reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_billwrite_height"
            android:orientation="vertical"
            android:background="@color/style_color_primary"
            android:elevation="10dp"
            android:id="@+id/billwrite_backgroud_layout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/billwrite_return"
                    android:background="@color/style_color_primary"
                    android:src="@mipmap/ic_arrow_back_white_24dp"
                    android:layout_margin="10dp"
                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/billwrite_confirm"
                    android:background="@color/style_color_primary"
                    android:src="@mipmap/ic_done_white_24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignTop="@+id/billwrite_return"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:errorEnabled="true"
                >
                <EditText
                    android:layout_width="@dimen/activity_billwrite_edittext_width"
                    android:layout_height="@dimen/activity_billwrite_edittext_height"
                    android:id="@+id/billwrite_getmoney"
                    android:layout_gravity="center_horizontal"
                    android:hint="金额"
                    android:textColorHint="@color/text_color_primary"
                    android:textColor="@color/text_color_primary"
                    android:ems="10"
                    android:inputType="number"
                    android:singleLine="true"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:errorEnabled="true">
                <EditText
                    android:layout_width="@dimen/activity_billwrite_edittext_width"
                    android:layout_height="@dimen/activity_billwrite_edittext_height"
                    android:id="@+id/billwrite_getremark"
                    android:hint="备注..."
                    android:textColorHint="@color/text_color_primary"
                    android:textColor="@color/text_color_primary"
                    android:ems="10"
                    android:textColorLink="#ffa7c3"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_billwrite_layout_height"
            android:id="@+id/billwrite_label_layout"
            android:layout_marginTop="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="0dp">
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_width"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:src="@mipmap/ic_label_grey_36dp"
            />
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="标签"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="食物"
                android:textSize="12sp"
                android:id="@+id/billwrite_label"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_billwrite_layout_height"
        android:id="@+id/billwrite_timelayout"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="0dp">
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_width"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:src="@mipmap/ic_time_grey_36dp"/>
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="时间"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2015/7/7"
                android:textSize="12sp"
                android:id="@+id/billwrite_time"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_billwrite_layout_height"
        android:id="@+id/billwrite_period_layout"
        android:elevation="0dp">
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_width"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:src="@mipmap/ic_period_grey_36dp"/>
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="周期 "
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/periodno"
                android:textSize="12sp"
                android:id="@+id/billwrite_period"/>

        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:id="@+id/billwrite_period_switch"
            android:checked="false"
            android:elevation="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_billwrite_layout_height"
        android:id="@+id/billwrite_state_layout"
        >
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_width"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:src="@mipmap/ic_state_grey_36dp"
            />
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="收支"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/statepay"
                android:textSize="12sp"
                android:id="@+id/billwrite_state"/>

        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:id="@+id/billwrite_state_switch"
            android:checked="false"
            android:elevation="1dp"
            />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>