<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_billwrite_height"
        android:orientation="vertical"
        android:background="@color/style_color_primary"
        android:elevation="10dp"
        android:id="@+id/billwrite_backgroud_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/billwrite_return"
                android:background="@color/style_color_primary"
                android:src="@drawable/ic_launcher"
                android:layout_margin="10dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/billwrite_confirm"
                android:background="@color/style_color_primary"
                android:src="@drawable/ic_launcher"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/billwrite_return"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <EditText
            android:layout_width="@dimen/activity_billwrite_edittext_weight"
            android:layout_height="@dimen/activity_billwrite_edittext_height"
            android:id="@+id/billwrite_getmoney"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:hint="￥   100.00"
            android:ems="10"
            android:inputType="number"
            android:singleLine="true"
            />

        <EditText
            android:layout_width="@dimen/activity_billwrite_edittext_weight"
            android:layout_height="@dimen/activity_billwrite_edittext_height"
            android:id="@+id/billwrite_getremark"
            android:layout_gravity="center_horizontal"
            android:hint="备注..."
            android:ems="10"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/billwrite_label_layout"
        android:layout_marginTop="20dp"
        android:elevation="0dp">
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_weight"
            android:layout_margin="@dimen/activity_billwrite_item_pad"/>
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="标签"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="食物"
                android:textSize="15sp"
                android:id="@+id/billwrite_label"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/billwrite_timelayout"
        android:elevation="0dp">
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_weight"
            android:layout_margin="@dimen/activity_billwrite_item_pad"/>
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="时间"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2015/7/7"
                android:textSize="15sp"
                android:id="@+id/billwrite_time"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/billwrite_period_layout"
        android:elevation="0dp">
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_weight"
            android:layout_margin="@dimen/activity_billwrite_item_pad"/>
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="周期 "
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/periodno"
                android:textSize="15sp"
                android:id="@+id/billwrite_period"/>

        </LinearLayout>

        <Switch
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_weight"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:id="@+id/billwrite_period_switch"
            android:checked="false"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/billwrite_state_layout"
        android:elevation="0dp">
        <ImageView
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_weight"
            android:layout_margin="@dimen/activity_billwrite_item_pad"/>
        <LinearLayout
            android:layout_width="@dimen/activity_billwrite_item_detail_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_billwrite_childitem_height"
                android:text="收支"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/statepay"
                android:textSize="15sp"
                android:id="@+id/billwrite_state"/>

        </LinearLayout>

        <Switch
            android:layout_height="@dimen/activity_billwrite_item_height"
            android:layout_width="@dimen/activity_billwrite_item_weight"
            android:layout_margin="@dimen/activity_billwrite_item_pad"
            android:id="@+id/billwrite_state_switch"
            android:checked="false"
            />
    </LinearLayout>
</LinearLayout>