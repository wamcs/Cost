<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/frameLayout">
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="250dp"
                    android:layout_height="270dp"
                    android:id="@+id/table_pie_chart"
                    android:layout_gravity="center_vertical|center_horizontal"/>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:id="@+id/table_trans_btn">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="九月"
                        android:textSize="12sp"
                        android:id="@+id/table_trans_title"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:gravity="end"
                        android:textSize="20sp"
                        android:id="@+id/table_trans_money"
                        />
                </LinearLayout>
            </FrameLayout>


            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/table_last"
                android:background="@color/style_color_primary"
                android:src="@mipmap/ic_arrow_back_white_36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignTop="@+id/table_next"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/table_next"
                android:background="@color/style_color_primary"
                android:src="@mipmap/ic_arrow_forward_white_36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignBottom="@+id/frameLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="115dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table_recyclerview"/>
</LinearLayout>


