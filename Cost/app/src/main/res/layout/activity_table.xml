<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/style_color_primary">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/table_last"
        android:background="@color/style_color_primary"
        android:src="@mipmap/ic_arrow_back_white_36dp"
        android:layout_margin="8dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_margin="8dp"
            android:id="@+id/table_date_number"
            android:gravity="center"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/table_next"
        android:background="@color/style_color_primary"
        android:src="@mipmap/ic_arrow_forward_white_36dp"
        android:layout_margin="8dp"
       />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_tablayout"
        app:tabIndicatorColor="@color/table_tab_selected"
        app:tabSelectedTextColor="@color/table_tab_selected"
        app:tabTextColor="@color/table_tab_text"
        android:background="@color/table_tab_backgroud"
        />
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table_viewpager"/>

</LinearLayout>