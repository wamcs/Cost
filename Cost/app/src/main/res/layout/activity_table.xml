<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_tablayout"
        app:tabIndicatorColor="@color/table_tab_selected"
        app:tabSelectedTextColor="@color/table_tab_selected"
        app:tabTextColor="#66c0f2"
        android:background="@color/table_tab_backgroud"
        android:elevation="10dp"
        />
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table_viewpager"/>

</LinearLayout>