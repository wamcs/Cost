<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/piechart_itemcard_height"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/piechart_itemlayout_height"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <com.example.cost.contrl.CircleImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="15dp"
                android:id="@+id/table_circle_view"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="饮食"
                android:textSize="26sp"
                android:id="@+id/table_pieitem_title"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="400"
                android:textSize="26sp"
                android:id="@+id/table_pieitem_money"
                android:layout_weight="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="40%"
                android:textSize="26sp"
                android:id="@+id/table_pieitem_proportion"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>