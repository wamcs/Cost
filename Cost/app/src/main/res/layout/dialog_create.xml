<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dialog_backgroud">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入内容"
        android:text="新建账本"
        android:textSize="@dimen/dialog_title"
        android:textColor="@color/dialog_edit_text"
        android:gravity="center"
        android:id="@+id/dia_et"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dia_et"
        android:numColumns="5"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/dia_gv">

    </GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dia_gv"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/dia_negative_btn"
            android:layout_weight="1"
            android:background="@color/dialog_button_color"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定 "
            android:layout_marginEnd="5dp"
            android:id="@+id/dia_positive_btn"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:background="@color/dialog_button_color"
            />
    </LinearLayout>




</RelativeLayout>