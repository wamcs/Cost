<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/style_color_accent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="drawerArrowStyle">@style/MyAppDrawerArrowStyle</item>

    </style>

    <style name="AppTheme.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="MyAppDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="EditTheme" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">#a2a2a2</item>
    </style>



</resources>
