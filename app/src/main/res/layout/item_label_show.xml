<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/label_setting_height"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:weightSum="10"
    >

    <ImageView
        android:layout_width="@dimen/label_color_size"
        android:layout_height="@dimen/label_color_size"
        android:id="@id/label_setting_activity_label_color"
        android:layout_marginStart="10dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/label_color_size"
        android:textSize="@dimen/Title"
        android:textColor="#747474"
        android:cursorVisible="false"
        android:background="#00ffffff"
        android:maxLength="10"
        android:layout_marginStart="30dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:ems="10"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:id="@id/label_setting_activity_label_edittext"/>
</LinearLayout>
