<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="10dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:id="@id/cost_activity_header_imageview"
        android:background="@color/activity_head_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="250dp"
        android:id="@id/cost_activity_head_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@id/cost_activity_head_income_layout"
            >

            <TextView
                style="@style/HeaderLittleText"
                android:text="@string/header_income"
                android:layout_gravity="start"
                android:textColor="@color/secondary_color" />
            <TextView
                style="@style/HeaderLittleText"
                android:text="2,000.00"
                android:textColor="#ffffff"
                android:id="@id/cost_activity_income"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/cost_activity_head_pay_layout"
            >
            <TextView
                style="@style/HeaderLittleText"
                android:text="@string/header_pay"
                android:layout_gravity="start"
                android:textColor="@color/secondary_color"/>


            <TextView
                style="@style/HeaderLittleText"
                android:text="500.00"
                android:textColor="#ffffff"
                android:id="@id/cost_activity_pay"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生活日常"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/display1"
        android:id="@id/cost_activity_head_title"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBottom="@id/cost_activity_header_imageview"
        android:layout_alignParentStart="true" />


</RelativeLayout>