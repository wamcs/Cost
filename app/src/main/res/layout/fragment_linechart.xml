<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="275dp">
        <com.github.mikephil.charting.charts.LineChart
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@id/line_chart_fragment_line_chart"
        android:layout_gravity="center_vertical|center_horizontal"
        /></android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"

               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp">
               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_margin="5dp"
                   android:layout_gravity="start|center"
                   android:background="#00000000"
                   android:src="@mipmap/ic_chevron_left_grey600_36dp"
                   android:id="@id/line_chart_fragment_last_month_button"
                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/Title"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_weight="10"
                   android:id="@id/line_chart_fragment_month_textview"/>
               <ImageButton
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_margin="5dp"
                   android:layout_gravity="end|center"
                   android:background="#00000000"
                   android:src="@mipmap/ic_chevron_right_grey600_36dp"
                   android:id="@id/line_chart_fragment_next_month_button"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/backgroud"/>
           <LinearLayout
               style="@style/lineChartLinearLayout"
               >
               <ImageView
                   style="@style/lineChartImageView"
                   android:background="@color/line_chart_income"
                   />
               <TextView
                   style="@style/lineChartTitleText"
                   android:text="@string/income"
                   />
               <TextView
                   style="@style/lineChartDetailText"
                   android:text="200"
                   android:textColor="@color/line_chart_income"
                   android:id="@id/line_chart_fragment_income_textview"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/backgroud"/>
           <LinearLayout
               style="@style/lineChartLinearLayout">
               <ImageView
                   style="@style/lineChartImageView"
                   android:background="@color/line_chart_pay"
                   />
               <TextView
                   style="@style/lineChartTitleText"
                   android:text="@string/pay" />
               <TextView
                   style="@style/lineChartDetailText"
                   android:text="200"
                   android:id="@id/line_chart_fragment_pay_textview"
                   android:textColor="@color/line_chart_pay" />
           </LinearLayout>
       </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>