<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivityController">

    <ImageView
        android:id="@+id/main_act_tool_bar_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="@dimen/default_toolbar_imageview_padding"
        android:src="@mipmap/ic_menu_white_24dp"/>

    <ImageView
        android:id="@+id/main_act_tool_bar_chart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_bill_grey_36dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/main_act_tool_bar_shopping" />

    <ImageView
        android:id="@+id/main_act_tool_bar_shopping"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_chart"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/main_act_tool_bar_setting" />

    <ImageView
        android:id="@+id/main_act_tool_bar_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/ic_more_vert_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>