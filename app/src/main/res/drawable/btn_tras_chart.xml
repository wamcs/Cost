<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval"
            android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
            <solid android:color="@color/chart_trans" />
        </shape>
    </item>
    <item android:state_pressed="true"
        >
        <shape   android:shape="oval" android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" >
            <solid android:color="@color/chart_trans_pressed" />
        </shape>
    </item>

</selector>